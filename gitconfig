# Put it in ~/.gitconfig

[user]
  name = Danil Pismenny
  email = danil@brandymint.ru

[github]
  user = dapi
  token = token
  password = password

[push]
  default = current

[pull]
  rebase = true

[merge]
  summary=true

[core]
  excludesfile = ~/.gitignore_global
  editor = /usr/bin/vim
  preloadindex = true

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
  pager = true

[alias]
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[status]
  submoduleSummary = true
  renames = true
